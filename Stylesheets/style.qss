/* Sidebar */
#sideBar {
    color:white;
    background-color: qlineargradient(  spread:pad, x1:0 y1:0, x2:1 y2:0,
                                        stop:0 #840b11, stop:1  #c0010b);
}
#sideBar QPushButton, #sideBar QLabel { color: white; }
/* Sidebar End */


/* Main Widget */
#centralwidget{ background-image:url(../cuPID/Images/background-blur.jpg); }


/* Content Widget */
#mainContentStackedWidget QLabel, #mainContentStackedWidget QPushButton{ color:white; }
#mainContentStackedWidget { background: rgba(0, 0, 0, 60%);}
/* Content Widget End */


/* Login Widget */
#LoginForm QLabel {
    background:transparent;
    color:black;
} /* Login Widget End */


/* cuPID Logo Images set to a QLabel */
#lblLogo{ background-image:url(../cuPID/Images/arrow-white-2.svg); }
#lblheader { background-image:url(../cuPID/Images/arrow-black-2.svg); }
/* cuPID Logo End */

/* Formatting for all QT Elements */

/* All Widgets */
QWidget *{ background:transparent; }

/* Label */
QLabel{ margin:0 10 0 10; }

/* Button */
QPushButton, QPushButton *{
    border:none;
    padding:10 10 10 10;
    font-family: "Sans Serif", Times, serif;
    outline:0;
    width:100%;
}
QPushButton:hover {
    background-color: #550000;
    color:white;
}
/* Button End */

/* QTabbedWidget Configurations */
QTabWidget::pane { border-top: 2px solid transparent; }
QTabBar::tab {
    background: transparent;
    color: white;
}
QTabBar::tab:selected {
    color: grey;
}
/* QTabbedWidget End */

/* Formatting End */
