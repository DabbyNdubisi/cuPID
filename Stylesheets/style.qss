/* Sidebar */
#LoginForm, #SignUpForm, #sideBar {
    color:%4;
    background-color: qlineargradient(  spread:pad, x1:0 y1:0, x2:1 y2:0,
                                        stop:0 %1, stop:1  %2);
}
#recentWidget{
    background:rgba(0,0,0, 10%);
}

#LoginForm QPushButton, #SignUpForm QPushButton, #sideBar QPushButton {
    color: %4;
    background: transparent;
    border:none;
}

#LoginForm QLabel, #SignUpForm QLabel {
    color: %4;
    border:none;

}

#RecentProjectsWidget *{
    padding:5 0 0 0;
}



QLabel {
    padding-left: 10;
}

#sideBar QLabel {
    color: %4;
    padding: 10 10 10 10;
}
#lblAppname, #lblUsername {
    border-bottom:2px solid %4;
}
#LoginForm QPushButton, #SignUpForm QPushButton{
    background:rgba(255, 255, 255, 10%);
    border-bottom: 1px solid rgba(0, 0, 0, 30%);
    border-left: 1px solid rgba(0, 0, 0, 30%);
